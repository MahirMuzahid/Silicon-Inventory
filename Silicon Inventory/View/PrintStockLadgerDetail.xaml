<UserControl x:Class="Silicon_Inventory.View.PrintStockLadgerDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Silicon_Inventory.View"
             mc:Ignorable="d" 
             Height="28cm" Width="21cm">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="GridViewColumnHeaderBackground" EndPoint="0,1" StartPoint="0,0">
            <GradientStop Color="#FFFFFFFF" Offset="0"/>
            <GradientStop Color="#FFFFFFFF" Offset="0.4091"/>
            <GradientStop Color="#FFF7F8F9" Offset="0"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GridViewColumnHeaderBorderBackground" EndPoint="0,1" StartPoint="0,0">
            <GradientStop Color="White" Offset="0"/>
            <GradientStop Color="White" Offset="0"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GridViewColumnHeaderHoverBackground" EndPoint="0,1" StartPoint="0,0">
            <GradientStop Color="#FFBDEDFF" Offset="0"/>
            <GradientStop Color="#FFB7E7FB" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GridViewColumnHeaderPressBackground" EndPoint="0,1" StartPoint="0,0">
            <GradientStop Color="#FF8DD6F7" Offset="0"/>
            <GradientStop Color="#FF8AD1F5" Offset="1"/>
        </LinearGradientBrush>
        <Style x:Key="GridViewColumnHeaderGripper" TargetType="{x:Type Thumb}">

            <Setter Property="Width" Value="0"/>
            <Setter Property="Height" Value="{Binding ActualHeight, RelativeSource={RelativeSource TemplatedParent}}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="{StaticResource GridViewColumnHeaderBorderBackground}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="Transparent" Padding="{TemplateBinding Padding}">
                            <Rectangle Fill="{TemplateBinding Background}" HorizontalAlignment="Center" Width="4"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="GridViewColumnHeaderStyle1" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="{StaticResource GridViewColumnHeaderBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GridViewColumnHeaderBorderBackground}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="2,0,2,0"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                        <Grid SnapsToDevicePixels="true">
                            <Border x:Name="HeaderBorder" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,1,0,1" Background="{TemplateBinding Background}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition MaxHeight="7"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Rectangle x:Name="UpperHighlight" Fill="White" Visibility="Collapsed"/>
                                    <Border Padding="{TemplateBinding Padding}" Grid.RowSpan="2">
                                        <ContentPresenter x:Name="HeaderContent" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="0,0,0,1" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    </Border>
                                </Grid>
                            </Border>
                            <Border x:Name="HeaderHoverBorder" BorderThickness="1,0,1,1" Margin="1,1,0,0"/>
                            <Border x:Name="HeaderPressBorder" BorderThickness="1,1,1,0" Margin="1,0,0,1"/>
                            <Canvas>
                                <Thumb x:Name="PART_HeaderGripper" Style="{StaticResource GridViewColumnHeaderGripper}"/>
                            </Canvas>
                        </Grid>
                        <ControlTemplate.Triggers>

                            <Trigger Property="Height" Value="Auto">
                                <Setter Property="MinHeight" Value="20"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Role" Value="Floating">
                    <Setter Property="Opacity" Value="0.4082"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                                <Canvas x:Name="PART_FloatingHeaderCanvas">
                                    <Rectangle Fill="#FF000000" Height="{TemplateBinding ActualHeight}" Opacity="0.4697" Width="{TemplateBinding ActualWidth}"/>
                                </Canvas>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Role" Value="Padding">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                                <Border x:Name="HeaderBorder" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,1,0,1" Background="{TemplateBinding Background}"/>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="Height" Value="Auto">
                                        <Setter Property="MinHeight" Value="20"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <SolidColorBrush x:Key="ListBorder" Color="Black"/>
        <Style x:Key="ListViewStyle1" TargetType="{x:Type ListView}">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
            <Setter Property="ScrollViewer.PanningMode" Value="Both"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListView}">
                        <Themes:ListBoxChrome x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" RenderMouseOver="{TemplateBinding IsMouseOver}" RenderFocused="{TemplateBinding IsKeyboardFocusWithin}" SnapsToDevicePixels="true">
                            <ScrollViewer Padding="{TemplateBinding Padding}" Style="{DynamicResource {x:Static GridView.GridViewScrollViewerStyleKey}}">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </ScrollViewer>
                        </Themes:ListBoxChrome>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsGrouping" Value="true"/>
                                    <Condition Property="VirtualizingPanel.IsVirtualizingWhenGrouping" Value="false"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height=".2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>

            </Grid.RowDefinitions>

            <Label x:Name="pageno" Content="Page 1" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"/>
            <Label Content="JV of CEEL, SAH &amp; SILICON" FontSize="15" FontWeight="DemiBold"  Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Content="Bakhrabad, Chandina, Comilla"  FontSize="16" FontWeight="DemiBold" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Content="Periodic Stock Ladger Detail" FontSize="15" FontWeight="DemiBold" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label x:Name="storeName" Content="Store Name: Bakhrabad Warehuse"  Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <Label x:Name="reportDate" Content="Report Date: 12/12/2020"  Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Label x:Name="itemRange" Content="Item Range: A1 to B1"  Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="4"   HorizontalAlignment="Center" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260*"/>
                <ColumnDefinition Width="135*"/>
                <ColumnDefinition Width="279*"/>
            </Grid.ColumnDefinitions>
            <ListView x:Name="ItemList" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden"  Background="White" BorderBrush="White" Grid.ColumnSpan="3" Style="{StaticResource ListViewStyle1}" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn  Width="50" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding SL}" HorizontalAlignment="Center"  Foreground="Black" TextAlignment="Center" VerticalAlignment="Bottom" Background="White" Width="50" FontSize="12" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumnHeader Background="White" FontSize="12" BorderBrush="White" Width="50" Style="{DynamicResource GridViewColumnHeaderStyle1}" Content="SL#"/>
                        </GridViewColumn>
                        
                        <GridViewColumn  Width="70" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Date}"  TextAlignment="Left" VerticalAlignment="Bottom" Foreground="Black" Background="White" Width="70" FontSize="11" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumnHeader Background="White" FontSize="12" BorderBrush="White" Width="70"  BorderThickness="3" Style="{DynamicResource GridViewColumnHeaderStyle1}" Content="Date"/>
                        </GridViewColumn>

                        <GridViewColumn  Width="50" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Ticket}"  Foreground="Black" TextAlignment="Center" VerticalAlignment="Center" Background="White" Width="50" FontSize="11" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumnHeader Background="White" FontSize="12" BorderBrush="White" Width="50" Style="{DynamicResource GridViewColumnHeaderStyle1}" Content="Ticket"/>
                        </GridViewColumn>

                        <GridViewColumn  Width="100" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Type}"  Foreground="Black" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Width="100" FontSize="11" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumnHeader Background="White" FontSize="12" BorderBrush="White" Width="100" Style="{DynamicResource GridViewColumnHeaderStyle1}" Content="Type"/>
                        </GridViewColumn>

                        <GridViewColumn  Width="80" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OpeningBalance}" HorizontalAlignment="Right" Foreground="Black" TextAlignment="Center" VerticalAlignment="Center" Background="White" Width="80" FontSize="11" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumnHeader Background="White" FontSize="12" BorderBrush="White" Width="80" Style="{DynamicResource GridViewColumnHeaderStyle1}" Content="Opening Blnc"/>
                        </GridViewColumn>
                        
                        <GridViewColumn  Width="80" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding RecieptQty}" HorizontalAlignment="Right" Foreground="Black" TextAlignment="Center" VerticalAlignment="Center" Background="White" Width="80" FontSize="11" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumnHeader Background="White" FontSize="12" BorderBrush="White" Width="80" Style="{DynamicResource GridViewColumnHeaderStyle1}" Content="Reciept Qty"/>
                        </GridViewColumn>
                        
                        <GridViewColumn  Width="70" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding IssueQty}" HorizontalAlignment="Right" Foreground="Black" TextAlignment="Center" VerticalAlignment="Center" Background="White" Width="70" FontSize="11" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumnHeader Background="White" FontSize="12" BorderBrush="White" Width="70" Style="{DynamicResource GridViewColumnHeaderStyle1}" Content="Issue Qty"/>
                        </GridViewColumn>
                        
                        <GridViewColumn  Width="80" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ReturnQty}" HorizontalAlignment="Right" Foreground="Black" TextAlignment="Center" VerticalAlignment="Center" Background="White" Width="80" FontSize="11" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumnHeader Background="White" FontSize="12" BorderBrush="White" Width="80" Style="{DynamicResource GridViewColumnHeaderStyle1}" Content="Return Qty"/>
                        </GridViewColumn>
                        
                        <GridViewColumn  Width="80" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ClosingBalance}" HorizontalAlignment="Right" Foreground="Black" TextAlignment="Center" VerticalAlignment="Center" Background="White" Width="80" FontSize="11" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumnHeader Background="White" FontSize="12" BorderBrush="White" Width="80" Style="{DynamicResource GridViewColumnHeaderStyle1}" Content="Closing Blnc"/>
                        </GridViewColumn>
                        
                        <GridViewColumn  Width="115" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding WorkOrderNo}" HorizontalAlignment="Right" Foreground="Black" TextAlignment="Center" VerticalAlignment="Center" Background="White" Width="115" FontSize="11" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumnHeader Background="White" FontSize="12" BorderBrush="White" Width="115" Style="{DynamicResource GridViewColumnHeaderStyle1}" Content="Work Order"/>
                        </GridViewColumn>



                    </GridView>
                </ListView.View>
            </ListView>

            <Grid Grid.ColumnSpan="3" x:Name="listGrid" Margin="0,0,0,0">
                <Line x:Name="l1" X1="0" Y1="0" X2="0" Y2="1500" Stroke="Black" StrokeThickness="1"  />
                <Line x:Name="r1" X1="773" Y1="0" X2="773" Y2="1500" Stroke="Black" StrokeThickness="1"  />

                <Line X1="0" Y1="0" X2="783" Y2="0" Stroke="Black" StrokeThickness="1"  />


                <Line x:Name="il1" X1="50" Y1="0"  X2="50" Y2="22"  Stroke="Black"  StrokeThickness="1"  />
                <Line x:Name="il2" X1="120" Y1="0"  X2="120" Y2="22"  Stroke="Black"  StrokeThickness="1"  />
                <Line x:Name="il3" X1="180" Y1="0"  X2="180" Y2="22"  Stroke="Black"  StrokeThickness="1" />
                <Line x:Name="il4" X1="270" Y1="0"  X2="270" Y2="22"  Stroke="Black"  StrokeThickness="1" />
                <Line x:Name="il5" X1="355" Y1="0"  X2="355" Y2="22"  Stroke="Black"  StrokeThickness="1"  />
                <Line x:Name="il6" X1="434" Y1="0"  X2="434" Y2="22"  Stroke="Black"  StrokeThickness="1"  />
                <Line x:Name="il7" X1="502" Y1="0"  X2="502" Y2="22"  Stroke="Black"  StrokeThickness="1" />
                <Line x:Name="il8" X1="585" Y1="0"  X2="585" Y2="22"  Stroke="Black"  StrokeThickness="1" />
                <Line x:Name="il9" X1="670" Y1="0"  X2="670" Y2="22"  Stroke="Black"  StrokeThickness="1" />


                <Line X1="0" Y1="22" X2="783" Y2="22"  Stroke="Black" StrokeThickness="1" Grid.ColumnSpan="3" />
            </Grid>


        </Grid>
        
    </Grid>
</UserControl>
